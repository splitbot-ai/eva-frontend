@code{

    [Parameter]
    public bool IsSideOpen { get; set; }

    [Parameter]
    public EventCallback<string> RoomIdInURL { get; set; }
    [Parameter]
    public EventCallback<bool> OnClose{ get; set; }
    [Parameter]
    public EventCallback<bool> OnToggleSettings{ get; set; }
    [Parameter]
    public EventCallback<bool> OnToggleRename { get; set; }
    [Parameter]
    public EventCallback<RoomTypes> RoomType { get; set; }

    public string Search = string.Empty;
    public bool sendBtnDisabled = false;

    private string ResUrl = "/res/cloud/add";
    private string TaskUrl = "/agent";
    private bool _openSettings;
    private string UserName;
    private string _currentOptionRoom = string.Empty;
    //-------------------------------------------------- base function -------------------------------------------------->
    protected override async Task OnInitializedAsync()
    {
        base.OnInitialized();
        if (!_vm.HasSession())
        {

            NavigationManager.NavigateTo("/");
            return;
        }

        _vm.RandomizeTheQuestion();
        sendBtnDisabled = true;
        // _vm.WebsocketConnectionState += WebsocketState;
        _vm.OnMessageReceived += MessageReceivedAsync;
        _vm.UpdateInterface += MessageReceivedAsync;
        _vm.OnMsgAdded += MessageReceivedAsync;
        _vm.OnNavigation += Naviagate;
        _lg.UpdateSidebarforTask += MessageReceivedAsync;
        UserName = _ws.UserName;
        _vm.InitRooms();
    }
    private async void MessageReceivedAsync()
    {
        await InvokeAsync(() =>
        {
            StateHasChanged();
        });
        _vm.TypingAnimation = false;
    }

    // private async Task LoadRoomAsync(string roomId, int amt, bool unread)
    private async Task LoadRoomAsync(Room room)
    {
        _lg.Connected = true;
        await RoomType.InvokeAsync(room.RoomTypes);
        NavigationManager.NavigateTo($"/chat/{room.RoomId}");
        await _vm.LoadRoomAsync(room);
        CloseAfterChoosing();

    }
    private void DeleteRoom(string roomId)
    {
        _ = _vm.DeleteRoomAsync(roomId);
    }
    private void Close(){
        ToggleNav();
        OnClose.InvokeAsync(IsSideOpen);
    }
    private void CloseAfterChoosing()
    {
        IsSideOpen = false;
        OnClose.InvokeAsync(IsSideOpen);
    }
    private async void Naviagate(string url){

        if (string.IsNullOrWhiteSpace(url)) return;

        _lg.Connected = true;
        _vm.RoomId = "0";
        _vm.CurrentRoom = new();

        switch(url)
        {
            case var _ when url.Contains("/res"):
                _lg.ActivateTab?.Invoke();
                break;
            case var _ when url.Contains("/agent"):
                await GetMonitorsAgents();
                await GetAllTasks();
                break;
        }

        NavigationManager.NavigateTo(url);
        CloseAfterChoosing();
    }


    private async Task GetMonitorsAgents()
    {
        var result = await _monitorvm.GetMonitors();
        if (!result.Equals("OK"))
        {
            _sn.SnackBarManager(result);
            
        }
    }
    private async Task GetAllTasks()
    {
        var result = await _stvm.GetAllTasks();
        if (!result.Equals("OK"))
        {
            _sn.SnackBarManager(result);

        }
    }
    private bool _searchFocused = false;

    void OnFocus(FocusEventArgs _) => _searchFocused = true;
    void OnBlur(FocusEventArgs _) => _searchFocused = false;

    private async void EditTask(Room room){

        var result = await _stvm.GetTaskToEdit(room.RoomId);
        if (!result)
        {
            _sn.PoPSnackBar("_genError", Severity.Error);
            return;
        }
        NavigationManager.NavigateTo("/task/edit");
    }
    private async Task AddToBin(Room room)
    {
        var result = await _vm.SetRoomArchived(room.RoomId, true);
        if (string.IsNullOrEmpty(result))
        {
            _sn.PoPSnackBar("_genError", Severity.Error);
            return;
        }
        room.Archived = true;
        _lg.UpdateTrashAndArchive?.Invoke();

    }
    private async Task AddToFavourite(Room room)
    {
        var tempVal = !room.TrackContext;
        var result = await _vm.SetTrackChatContext(room.RoomId, tempVal);
        if (string.IsNullOrEmpty(result))
        {
            _sn.PoPSnackBar("_genError", Severity.Error);
            return;
        }
        room.TrackContext = tempVal;
        _lg.UpdateTrashAndArchive?.Invoke();

    }
    private void BinFilter()
    {
        _vm.Bin = ! _vm.Bin;

    }
    private void FavouriteFilter()
    {
        _vm.Favourite = !_vm.Favourite;
    }
    //-------------------------------------------------- toggle function -------------------------------------------------->
    private void ToggleRename(string roomId, string roomName)
    {
        _lg.RenameRoomName = roomName;
        _lg.RenameRoomId = roomId;
        OnToggleRename.InvokeAsync(true);
    }
    private void ToggleNav()
    {
        IsSideOpen = !IsSideOpen;
       //("you swiped");
    }

    private void ToggleDropdown(string roomId)
    {
        if (_currentOptionRoom.Equals(roomId))
        {
            _currentOptionRoom = string.Empty;
            return;
        }
        _currentOptionRoom = roomId;
        StateHasChanged();
    }
    private void ToggleSettings()
    {
       
        OnToggleSettings.InvokeAsync(true);
    }
    //-------------------------------------------------- handler function -------------------------------------------------->
